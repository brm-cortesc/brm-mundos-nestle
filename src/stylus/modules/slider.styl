//Carousel//
.item
	max-width 6rem
	
	img
		img-responsive(block)

//slider categorias 
.slide
	box-shadow 0px 10px 10px 0 rgba(0,0,0,0.25)
	transitionBase()
	position relative
	z-index 1
	
	&:hover
		.slider-hover 
			opacity 0.99
			pointer-events all
			
	&-categoria
		background-color $Azul[1]
		left 1rem
		position absolute
		text-transform uppercase
		top 0
		max-width 24rem
		z-index 2
		padding 1rem
		text-align center
		
		h3
			color #fff
			


	&-hover
		background-color rgba(255,255,255,0.8)
		opacity 0
		position absolute
		text-align center
		transitionBase()	
		cuadrado(100%)
		z-index 6
		
		&:hover, &.active
			opacity 0.99
			pointer-events all
			
	
	&-intro-txt
		position absolute
		right 9rem
		text-align center
		top 2.5rem
		width 30rem
		z-index 2
		
		h2
			line-height 1
			text-transform uppercase
			
		img
			img-responsive(block)
			margin 0 auto
			
		p
			font-size 1.8rem

	&:hover
		.slider-hover
			opacity 0.99
			pointer-events all
			
	.img-slide
		img-responsive(block)
		