.art-content
	a
		color darken($Rojo, 40%)
		display inline-block
		font-weight $Light
		outline none
		overflow hidden
		padding 0 0.25rem
		position relative
		text-decoration none
		vertical-align bottom
		white-space nowrap
		
		&::before
			background-color rgba($Rojo, 0.5)
			content ''
			cuadrado(100%)
			left 0
			pointer-events none
			position absolute
			top 0
			transform translateY(95%)
			transitionBase()
			z-index -1
			
		&:hover
			color 
			&::before
				transform translateY(0%)

	blockquote
		border-left 2px solid $Rojo
		display inline-block
		font-size 2rem
		font-style normal
		margin-left 2rem
		padding 0.5rem 1rem
		
	ol:not(.list-terminos)
		counter-reset li
		padding-left 3rem
		position relative
		
		li
			list-style none
			margin-bottom 1rem
			margin-top @margin-bottom
			position relative
			transitionBase()
			
					
			&::before
				absolute left -2.8rem
				background-color $Rojo
				border-radius 5px
				color #fff 
				content counter(li)
				counter-increment li
				height 2.1rem
				padding 0.1rem
				text-align center
				transition all ease-in-out 0.2s
				width @height
				
	p
		display inline-block
		margin 1rem auto
		
	ul
		counter-reset li
		padding-left 3rem
		position relative
		
		li
			list-style none
			position relative
			margin-bottom 1rem
			margin-top @margin-bottom
			transitionBase()
			
					
			&::before
				absolute left -2.3rem top 50%
				background-color $Rojo
				border-radius 100%
				color #fff 
				content ''
				counter-increment li
				height 1rem
				text-align center
				transform translate3d(0,-50%,0)
				transition all ease-in-out 0.2s
				width @height