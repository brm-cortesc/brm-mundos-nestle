.btn
	&-menu
		background none !important
		border none !important
		border-radius 0
		box-shadow none !important
		cursor pointer
		height 1.8rem
		max-width 100%
		padding 0 !important
		position relative
		transitionBase()
		width 2.4rem
		z-index 12
		
		&:active, &:focus, &:hover
			box-shadow none
			outline 0 !important
			outline none !important

		.line
			background-color #fff
			border-radius 0.5rem
			display block
			height 0.2rem
			left 0
			position absolute
			transitionBase()
			width 100%
			
			&:nth-of-type(1)
				top 0

			&:nth-of-type(2)
				top 50%
			
			&:nth-of-type(3)
				top 100%
				
		&.active
			position relative
			height 2.4rem
			z-index 11
			
			.line
			
				&:nth-of-type(1),
				&:nth-of-type(3)
					background-color $Rojo
					top 50%
					z-index 3
					width 80%
					left 10%

				&:nth-of-type(2)
					border-radius 100%
					height 2.4rem
					top 0
					
				&:nth-of-type(1)
					transform rotate(45deg)
					
				&:nth-of-type(3)
					transform rotate(-45deg)

.menu
	background-color #fff
	border-radius 0 5px 5px 0
	box-shadow 0px 0px 5px 0px rgba(0, 0, 0, .75)
	left -100%
	max-width 80%
	opacity 0
	padding 2rem 1rem
	position fixed
	text-align left
	top 0.5rem
	transitionBase()
	width 100%
	z-index 16



	ul
		margin 0
		padding 0
		width 100%
				
		li
			border-top 2px solid transparent
			border-color $Rojo
			display block
			padding 0.5rem
			transitionBase()
			
			&:nth-of-type(1)
				border-color transparent
						
			a
				display block
				&:hover, &:active, &:focus
					text-decoration none
			
			i, span
				display inline-block
				vertical-align middle
				transitionBase()
				
			i
				height auto
				cuadrado(5.1rem)
				
				svg
					cuadrado(100%)
					
				path
					fill $Rojo
					transitionBase()

			span
				margin-left 1rem
				

			&:hover
				background-color lighten($Rojo, 40%)
				color #fff
				
				a, span
					color #fff
					
				i
					path, circle, polygon
						fill #fff
					


	&.active
		opacity 0.99
		left 0


