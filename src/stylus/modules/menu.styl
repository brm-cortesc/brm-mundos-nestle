.menu
	background-color #fff
	bottom 15.3rem
	box-shadow 0px 3px 5px 0px rgba(0,0,0,0.5)
	height 7rem
	left 5%
	position absolute
	width 90%
	z-index 3
	
	ul
		list-style-type none
		margin 0
		padding 0
		
		li
			display block
			float left
			margin 0 auto
			max-width (100%/11)
			padding 0
			width 100%
			
			a
				display block
				font-size 1.2rem
				line-height 1
				letter-spacing -0.1rem
				padding 2.9rem 0.5rem
				text-align center
				text-transform uppercase
				
				&:hover
					text-decoration none
					
			&:nth-of-type(2),
			&:nth-of-type(5)
				a
					padding 2.3rem 0.5rem
				
			child = 1
			for cat, val in categorias
					
				&:nth-of-type({child})
					&:active, &:hover, &.active
						a
							background-color val
							color #fff					
				child = child+1
				