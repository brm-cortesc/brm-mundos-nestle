//Articulos del home
.art
	&-header

		h1
			color #fff
			line-height 1.2
			margin 0 auto 1rem
			padding 0.5rem
			font-weight $Normal
			
			span
				bgHighlight()
				
		img
			img-responsive()
				
	&-home
		max-height 63rem
		overflow hidden
		position relative
		width 100%
		
		a
			display block
			
		.btn
			transitionBase()

		img
			img-responsive()
			

		.container-hover
			background-color $Rojo
			bottom 0
			box-shadow inset 0px 5px 10px 0px rgba(0, 0, 0, 0.5)
			left 0
			padding 0.5rem
			padding-top 1rem
			position absolute
			transitionBase()
			width 100%
			
//Containers elements
.container
	&-404
		h1
			color #fff
			font-size 11rem
			letter-spacing 0.4rem
			line-height 1
			margin-bottom 2rem
			position relative
			strokeText(  $Rojo )
			text-align left
			font-weight $Normal
			transitionBase()
			z-index 2
			
			&::before
				bottom -0.2rem
				color #fff
				content attr(data-title)
				left @bottom
				mix-blend-mode color-burn
				pointer-events none
				position absolute
				text-shadow -0.3rem 0.3rem 0px #fff
				transitionBase()
				z-index 2
				
		h2
			font-size 4rem
			font-weight $Normal
			margin-bottom 3rem
			font-family $FontStack

		img
			img-responsive()
			display none
			position relative
			transform translateY(7rem)
			z-index -6
			

	&-map
		img
			img-responsive()
			
	&-map-header
		
		h1
			color #fff
			font-size 3rem
			letter-spacing 0.4rem
			line-height 1
			margin-bottom 2rem
			position relative
			strokeText(  darken($Rojo, 45%) )
			text-align left
			transitionBase()
			z-index 2
			
			&::before
				bottom -0.2rem
				color darken($Rojo, 40%)
				content attr(data-title)
				left @bottom
				pointer-events none
				position absolute
				text-shadow -0.3rem 0.3rem 0px lighten($Rojo, 40%)
				transitionBase()
				z-index 2
		
	&-mapa-home

		h2, p, a
			color #fff
			text-align left
		
		h2
			font-size 2rem

		p
			padding-left 2rem
			

		svg
			path
				transitionBase()
			
		.btn
			display block
			margin 1rem 0
			margin-left 2rem
			max-width 14.6rem
			text-align center
			
