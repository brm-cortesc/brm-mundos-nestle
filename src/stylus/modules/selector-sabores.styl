.select-sabor
	centrarAb()
	color #fff
	cuadrado(100%)
	opacity 0
	pointer-events none
	position fixed
	text-align center
	overflow hidden
	// transitionBase()
	z-index 16
	
	&::before
		animation 0.8s ease-out reverse backwards paused
		background-color rgba(0,0,0,0.8)
		border-radius 100%
		content ''
		display block
		height 0
		overflow hidden
		padding-bottom 100%
		pointer-events none
		transform scale(0.04) translateY(99999rem)
		width @padding-bottom

	h3
		color #fff
		opacity 0
		transitionBase()
		font-size 2.6rem
		padding-top 3rem
		margin 1rem auto
		
	img
		img-responsive()

	.btn
		&-close
			border none
			border-radius 100%
			cuadrado(4.8rem)
			padding 0
			position absolute
			right 1rem
			top @right
			opacity 0
			z-index 30 
			
			img,svg
				display block
				cuadrado(100%)
			
			&:hover
				background-color rgba(0,0,0,0.6)	
		
	.descripcion-sabor
		display none
		opacity 0
		transitionBase()
		
	.sabor-op
		cursor pointer 
		display inline-block
		padding 1rem
		text-align center
		opacity 0
		filter blur(10px) 
		transitionBase()
		transform translateY(2rem)
		vertical-align top
		
		&:hover
			h4
				color #fff
				
			.select
				circ(5.3rem)
				

		h4
			color #fff
			font-weight $Normal
			transitionBase()
		
		.indicator
			background-color #fff
			circ(5.4rem)
			padding 0
			margin 0 auto
			position relative
			transitionBase()
			
		.select
			background-color lighten($Rojo, 40%)
			circ(5rem)
			left 50%
			margin auto
			overflow hidden
			padding 0
			position absolute
			top 50%
			transform translate3d(-50%,-50%,0)
			transitionBase()

			img
				display block
				margin auto
				max-width 60%
				
		&.active
			pointer-events none
			.select
				circ(5.4rem)
				
			h4
				color $Rojo
				
	.select-content
		cuadrado(90%)
		left 5%
		position absolute
		max-height 38rem
		overflow-y scroll
		// transitionBase()
		top 2rem
		
		&::-webkit-scrollbar
			width 0.5rem
		&::-webkit-scrollbar-track
			background-color rgba(255,255,255,0.5)
		&::-webkit-scrollbar-thumb
			background-color $Rojo

	&.active
		opacity 0.99
		pointer-events all
		
		&::before
			animation-name menu-animation
			animation-direction normal
			animation-fill-mode forwards
			animation-play-state running
			
		h3,
		.btn-close,
		.descripcion-sabor
			opacity 0.99
			transition-delay 0.8s

		.sabor-op
			opacity 0.99
			filter blur(0)
			transform translateY(0)
			
			for x in (1..40)
				&:nth-of-type({x})
					transition-delay (0.8s+0.25s*x)
		